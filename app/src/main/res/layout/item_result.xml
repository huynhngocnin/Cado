<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/dark"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_league_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rerult_img_league_flag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/rerult_text_league_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="League Name"
            android:textColor="@color/white_dark"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_league_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/rerult_text_match_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            android:text="00:00"
            android:textColor="@color/white_dark" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/rerult_text_match_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="2016/09/09"
            android:textColor="@color/white_dark" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ProgressBar
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/rerult_text_match_timeline"
            android:progress="100" />

        <TextView
            android:id="@+id/rerult_text_match_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:gravity="center_vertical"
            android:text="FT"
            android:textColor="@color/white_dark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_league_height"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/rerult_img_match_home_flag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/rerult_text_match_home_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/rerult_text_match_home_score"
            android:layout_toRightOf="@+id/rerult_img_match_home_flag"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Home Team"
            android:textColor="@color/white_dark" />

        <TextView
            android:id="@+id/rerult_text_match_home_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center_vertical"
            android:text="-"
            android:textColor="@color/white_dark"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_league_height"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/rerult_img_match_guest_flag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/rerult_text_match_guest_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/rerult_text_match_guest_score"
            android:layout_toRightOf="@+id/rerult_img_match_guest_flag"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Guest Team"
            android:textColor="@color/white_dark" />

        <TextView
            android:id="@+id/rerult_text_match_guest_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center_vertical"
            android:text="-"
            android:textColor="@color/white_dark"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_league_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/match_home"
                android:textColor="@color/white_dark"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/rerult_text_bet_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="-"
                android:textColor="@color/white_dark"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/match_odds"
                android:textColor="@color/white_dark"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/rerult_text_bet_odds"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="-"
                android:textColor="@color/white_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/match_guest"
                android:textColor="@color/white_dark"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/rerult_text_bet_guest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="-"
                android:textColor="@color/white_dark"
                android:textStyle="bold" />
        </LinearLayout>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_camera" />

    </LinearLayout>

</LinearLayout>